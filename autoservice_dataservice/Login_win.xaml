<Window x:Class="autoservice_dataservice.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:autoservice_dataservice"
        mc:Ignorable="d"
        Title="Login_win" Height="350" Width="400">
    <StackPanel>
        <TextBlock Text="Welcome!" HorizontalAlignment="Center"></TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,25">
            <TextBlock Text="Login"></TextBlock>
            <TextBox Width="100" Name ="Log" Margin="10,0,0,0" ></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Password" ></TextBlock>
            <TextBox Width="82" Name="Pass" Margin="10,0,0,0" ></TextBox>
        </StackPanel>

        <Button Content="Login" Width="100" Margin="0,10,0,0" Click="Button_Click_1"></Button>
        <Button Content="Register" Width="100" Margin ="0,25,0,0" Click="Button_Click"></Button>
    </StackPanel>
</Window>
